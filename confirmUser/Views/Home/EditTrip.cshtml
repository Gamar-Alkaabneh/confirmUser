@model EditViewModel

<div class="container w-100 align-items-center justify-content-center min-vh-100">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <h2 class="text-center mb-5">Trip Details</h2>
            <hr />
            @using (Html.BeginForm("EditTrip", "Home", FormMethod.Post, new { id = "editForm" }))
            {
                @Html.AntiForgeryToken()


                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="User"></label>
                    @Html.TextBoxFor(model => model.User, new { @class = "form-control form-control-lg", id = "UserId", type = "hidden" })
                    @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
                </div>

                <div class="form-outline mb-4">
                    <label class="form-label" for="Name">User Name</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control form-control-lg", id = "UserName", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="TripDate" class="control-label"></label>
                    <input asp-for="TripDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="TripDate" class="text-danger"></span>
                </div>
                <div class="form-outline mb-4">
                    <label class="form-label" for="TripsNum">Number of Trips</label>
                    @Html.TextBoxFor(model => model.TripsNum, new { @class = "form-control form-control-lg", id = "TripsNum", type = "number" })
                    @Html.ValidationMessageFor(model => model.TripsNum, "", new { @class = "text-danger" })
                </div>

                <div class="form-outline mb-4">
                    <label class="form-label" for="HoursNum">Number of Hours</label>
                    @Html.TextBoxFor(model => model.HoursNum, new { @class = "form-control form-control-lg", id = "HoursNum", type = "number" })
                    @Html.ValidationMessageFor(model => model.HoursNum, "", new { @class = "text-danger" })
                </div>

                <div class="form-outline mb-4">
                    <label class="form-label" for="TripDistanceKM">Trip Distance (KM)</label>
                    @Html.TextBoxFor(model => model.TripDistanceKM, new { @class = "form-control form-control-lg", id = "TripDistanceKM", type = "number", step = "0.01" })
                    @Html.ValidationMessageFor(model => model.TripDistanceKM, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label asp-for="ApplicationID"></label>
                    @Html.DropDownListFor(model => model.ApplicationID, Model.Applications, "Select an application", new { @class = "form-control" })
                </div>

                <div class="d-flex justify-content-center mb-4">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/edittrip.js"></script>
}